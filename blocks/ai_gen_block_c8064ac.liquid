{% doc %}
  @prompt
    I want a customizable text section. With the option to have a title on the left and the text on the right.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-text-section-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-text-section-content-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    align-items: {% if block.settings.vertical_alignment == 'top' %}flex-start{% elsif block.settings.vertical_alignment == 'center' %}center{% else %}flex-end{% endif %};
    justify-content: {{ block.settings.horizontal_alignment }};
  }

  .ai-text-section-content-{{ ai_gen_id }}--stacked {
    flex-direction: column;
    align-items: {{ block.settings.horizontal_alignment }};
  }

  .ai-text-section-content-{{ ai_gen_id }}--split {
    flex-direction: row;
  }

  .ai-text-section-title-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'split' %}
      flex: 0 0 {{ block.settings.title_width }}%;
      padding-left: {{ block.settings.title_offset_left }}px;
      padding-right: {{ block.settings.title_offset_right }}px;
    {% else %}
      width: 100%;
    {% endif %}
  }

  .ai-text-section-title-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-text-section-title-{{ ai_gen_id }} p {
    margin: 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-text-section-text-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'split' %}
      flex: 0 0 {{ block.settings.text_width }}%;
      padding-left: {{ block.settings.text_offset_left }}px;
      padding-right: {{ block.settings.text_offset_right }}px;
    {% else %}
      width: 100%;
    {% endif %}
  }

  .ai-text-section-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-section-text-{{ ai_gen_id }} p {
    margin: 0 0 1em;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-section-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-section-content-{{ ai_gen_id }}--split {
      flex-direction: column;
    }

    .ai-text-section-title-wrapper-{{ ai_gen_id }} {
      width: 100%;
      padding-left: 0;
      padding-right: 0;
    }

    .ai-text-section-text-wrapper-{{ ai_gen_id }} {
      width: 100%;
      padding-left: 0;
      padding-right: 0;
    }

    .ai-text-section-title-{{ ai_gen_id }},
    .ai-text-section-title-{{ ai_gen_id }} p {
      text-align: {{ block.settings.mobile_title_alignment }};
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-text-section-text-{{ ai_gen_id }},
    .ai-text-section-text-{{ ai_gen_id }} p {
      text-align: {{ block.settings.mobile_text_alignment }};
      font-size: calc({{ block.settings.text_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-section-container-{{ ai_gen_id }}">
    <div class="ai-text-section-content-{{ ai_gen_id }} ai-text-section-content-{{ ai_gen_id }}--{{ block.settings.layout }}">
      {% if block.settings.title != blank %}
        <div class="ai-text-section-title-wrapper-{{ ai_gen_id }}">
          <h2 class="ai-text-section-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        </div>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-text-section-text-wrapper-{{ ai_gen_id }}">
          <div class="ai-text-section-text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

