{% doc %}
  @prompt
    splitscreen with customizable width/height, spacing options, and automatic animation with speed control
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-splitscreen-container-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: center;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px {{ block.settings.section_padding_horizontal }}px;
  }

  .ai-splitscreen-{{ ai_gen_id }} {
    position: relative;
    {% if block.settings.width_option == 'full' %}
      width: 100%;
    {% elsif block.settings.width_option == 'centered' %}
      width: 100%;
      max-width: {{ block.settings.max_width }}px;
    {% elsif block.settings.width_option == 'custom' %}
      width: {{ block.settings.custom_width }}%;
    {% endif %}
    {% if block.settings.height_option == 'viewport' %}
      height: 100vh;
    {% elsif block.settings.height_option == 'custom' %}
      height: {{ block.settings.custom_height }}px;
    {% endif %}
    display: flex;
    flex-direction: row;
    gap: {{ block.settings.panel_gap }}px;
  }

  .ai-splitscreen-title-full-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    color: {{ block.settings.title_color }};
    text-align: center;
    padding: 0 20px;
    max-width: 90%;
    pointer-events: none;
  }

  .ai-splitscreen-panel-{{ ai_gen_id }} {
    position: relative;
    flex: 1;
    height: 100%;
    overflow: hidden;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .ai-splitscreen-panel-{{ ai_gen_id }}:hover {
    opacity: 0.9;
  }

  .ai-splitscreen-media-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 0.5s ease;
    z-index: 1;
  }

  .ai-splitscreen-media-wrapper-{{ ai_gen_id }}.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .ai-splitscreen-media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
    transform-origin: center center;
  }

  .ai-splitscreen-media-wrapper-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-splitscreen-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-splitscreen-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-splitscreen-panel-title-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
    color: {{ block.settings.title_color }};
    text-align: center;
    padding: 0 20px;
    max-width: 90%;
    pointer-events: none;
  }

  .ai-splitscreen-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-splitscreen-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.panel_gap_mobile }}px;
    }

    .ai-splitscreen-panel-{{ ai_gen_id }} {
      width: 100%;
      height: 50vh;
    }

    .ai-splitscreen-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_mobile }}px {{ block.settings.section_padding_horizontal_mobile }}px {{ block.settings.section_padding_bottom_mobile }}px {{ block.settings.section_padding_horizontal_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-splitscreen-container-{{ ai_gen_id }}">
  <splitscreen-interactive-{{ ai_gen_id }}
    class="ai-splitscreen-{{ ai_gen_id }}"
    data-auto-play-left="{{ block.settings.auto_play_left }}"
    data-animation-speed-left="{{ block.settings.animation_speed_left }}"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.title_position == 'full' and block.settings.title != blank %}
      <div class="ai-splitscreen-title-full-{{ ai_gen_id }}">
        <h2>{{ block.settings.title }}</h2>
      </div>
    {% endif %}

    <div
      class="ai-splitscreen-panel-{{ ai_gen_id }} ai-splitscreen-panel-left-{{ ai_gen_id }}"
      data-panel="left"
    >
      <div class="ai-splitscreen-overlay-{{ ai_gen_id }}"></div>

      {% if block.settings.left_media_type == 'image' %}
        {% for i in (1..5) %}
          {% assign image_key = 'left_image_' | append: i %}
          {% assign rotation_key = 'left_image_' | append: i | append: '_rotation' %}
          {% assign image = block.settings[image_key] %}
          {% assign rotation = block.settings[rotation_key] %}
          {% if image %}
            {% assign object_fit_value = block.settings.image_fit %}
            {% if rotation != 0 %}
              {% assign object_fit_value = 'contain' %}
            {% endif %}
            <div class="ai-splitscreen-media-wrapper-{{ ai_gen_id }} {% if i != 1 %}hidden{% endif %}" data-index="{{ i }}">
              <img
                src="{{ image | image_url: width: 2000 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="ai-splitscreen-media-{{ ai_gen_id }}"
                style="transform: rotate({{ rotation }}deg); object-fit: {{ object_fit_value }};"
              >
            </div>
          {% endif %}
        {% endfor %}
        
        {% unless block.settings.left_image_1 or block.settings.left_image_2 or block.settings.left_image_3 or block.settings.left_image_4 or block.settings.left_image_5 %}
          <div class="ai-splitscreen-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endunless %}
      {% else %}
        {% for i in (1..5) %}
          {% assign video_key = 'left_video_' | append: i %}
          {% assign video = block.settings[video_key] %}
          {% if video %}
            <div class="ai-splitscreen-media-wrapper-{{ ai_gen_id }} {% if i != 1 %}hidden{% endif %}" data-index="{{ i }}">
              {{ video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
            </div>
          {% endif %}
        {% endfor %}
        
        {% unless block.settings.left_video_1 or block.settings.left_video_2 or block.settings.left_video_3 or block.settings.left_video_4 or block.settings.left_video_5 %}
          <div class="ai-splitscreen-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endunless %}
      {% endif %}

      {% if block.settings.title_position == 'left' and block.settings.title != blank %}
        <div class="ai-splitscreen-panel-title-{{ ai_gen_id }}">
          <h2>{{ block.settings.title }}</h2>
