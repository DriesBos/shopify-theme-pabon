<script>
  (function() {
    class SplitscreenInteractive{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.leftPanel = this.querySelector('[data-panel="left"]');
        this.rightPanel = this.querySelector('[data-panel="right"]');
        
        // Single shared index for both panels to keep them in sync
        this.currentIndex = 1;
        
        this.autoPlayInterval = null;
        
        // Use single animation control for both panels
        this.autoPlay = this.dataset.autoPlayLeft === 'true';
        this.animationSpeed = parseInt(this.dataset.animationSpeedLeft) * 1000 || 3000;
      }

      connectedCallback() {
        this.setupEventListeners();
        
        if (this.autoPlay) {
          this.startAutoPlay();
        }
      }

      disconnectedCallback() {
        this.stopAutoPlay();
      }

      setupEventListeners() {
        // Clicking either panel cycles both panels together
        if (this.leftPanel) {
          this.leftPanel.addEventListener('click', () => {
            this.stopAutoPlay();
            this.cycleBothPanels();
          });
        }
        
        if (this.rightPanel) {
          this.rightPanel.addEventListener('click', () => {
            this.stopAutoPlay();
            this.cycleBothPanels();
          });
        }
      }

      startAutoPlay() {
        this.autoPlayInterval = setInterval(() => {
          this.cycleBothPanels();
        }, this.animationSpeed);
      }

      stopAutoPlay() {
        if (this.autoPlayInterval) {
          clearInterval(this.autoPlayInterval);
          this.autoPlayInterval = null;
        }
      }

      cycleBothPanels() {
        // Calculate next index first
        const nextIndex = this.getNextIndex();
        
        // Hide current index in both panels
        this.hideIndex(this.leftPanel, this.currentIndex);
        this.hideIndex(this.rightPanel, this.currentIndex);
        
        // Show next index in both panels
        this.showIndex(this.leftPanel, nextIndex);
        this.showIndex(this.rightPanel, nextIndex);
        
        // Update shared index
        this.currentIndex = nextIndex;
      }

      hideIndex(panel, index) {
        if (!panel) return;
        
        const wrapper = panel.querySelector(`[data-index="${index}"]`);
        if (wrapper) {
          wrapper.classList.add('hidden');
        }
      }

      showIndex(panel, index) {
        if (!panel) return;
        
        const wrapper = panel.querySelector(`[data-index="${index}"]`);
        if (wrapper) {
          wrapper.classList.remove('hidden');
        }
      }

      getNextIndex() {
        let nextIndex = this.currentIndex + 1;
        
        // Find the next available image index (checking both panels)
        for (let i = 0; i < 5; i++) {
          if (nextIndex > 5) {
            nextIndex = 1;
          }
          
          const leftWrapper = this.leftPanel ? this.leftPanel.querySelector(`[data-index="${nextIndex}"]`) : null;
          const rightWrapper = this.rightPanel ? this.rightPanel.querySelector(`[data-index="${nextIndex}"]`) : null;
          
          if (leftWrapper || rightWrapper) {
            return nextIndex;
          }
          nextIndex++;
        }
        
        return 1; // Default to first image
      }
    }

    customElements.define('splitscreen-interactive-{{ ai_gen_id }}', SplitscreenInteractive{{ ai_gen_id }});
  })();
</script>

