{% doc %}
  @prompt
    Carousel showing exactly 2 images side by side

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-slideshow-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-slideshow-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} {
    flex: 0 0 40%;
    display: flex;
    flex-direction: column;
  }

  .ai-slideshow-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.slide_height }}px;
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-slideshow-slide-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-slideshow-text-wrapper-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.text_padding }}px {{ block.settings.text_padding | times: 1.5 }}px;
    background-color: {{ block.settings.text_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slideshow-text-content-{{ ai_gen_id }} {
    text-align: center;
    width: 100%;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  .ai-slideshow-text-content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-slideshow-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-slideshow-nav-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.slide_height | divided_by: 2 }}px;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_text_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    z-index: 10;
    opacity: 0.9;
  }

  .ai-slideshow-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    opacity: 1;
  }

  .ai-slideshow-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-slideshow-nav-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-slideshow-nav-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-slideshow-nav-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-slideshow-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    padding: 15px;
    background-color: {{ block.settings.text_background_color }};
  }

  .ai-slideshow-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.5;
  }

  .ai-slideshow-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  {% unless block.settings.show_navigation %}
    .ai-slideshow-nav-{{ ai_gen_id }} {
      display: none;
    }
  {% endunless %}

  {% unless block.settings.show_dots %}
    .ai-slideshow-dots-{{ ai_gen_id }} {
      display: none;
    }
  {% endunless %}

  {% unless block.settings.show_text %}
    .ai-slideshow-text-wrapper-{{ ai_gen_id }} {
      display: none;
    }
  {% endunless %}

  @media screen and (max-width: 749px) {
    .ai-slideshow-slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-slideshow-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.slide_height | times: 0.7 }}px;
    }

    .ai-slideshow-text-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.text_padding | times: 0.8 }}px {{ block.settings.text_padding | times: 1.2 }}px;
    }

    .ai-slideshow-nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
      top: {{ block.settings.slide_height | times: 0.7 | divided_by: 2 }}px;
    }

    .ai-slideshow-nav-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-slideshow-nav-next-{{ ai_gen_id }} {
      right: 10px;
    }

    .ai-slideshow-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<image-slideshow-{{ ai_gen_id }}
  class="ai-slideshow-container-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-wrapper-{{ ai_gen_id }}">
    <div class="ai-slideshow-track-{{ ai_gen_id }}">
      {% liquid
        assign has_images = false
        for i in (1..5)
          assign image_key = 'image_' | append: i
          assign video_key = 'video_url_' | append: i
          if block.settings[image_key] != blank or block.settings[video_key] != blank
            assign has_images = true
            break
          endif
        endfor
      %}

      {% if has_images %}
        {% for i in (1..5) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign video_key = 'video_url_' | append: i
            assign text_key = 'text_' | append: i
            assign image = block.settings[image_key]
            assign video_url = block.settings[video_key]
            assign text = block.settings[text_key]
          %}
          {% if image != blank or video_url != blank %}
            <div class="ai-slideshow-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
              <div class="ai-slideshow-image-wrapper-{{ ai_gen_id }}">
                {% if video_url != blank %}
                  <video
                    autoplay
                    muted
                    loop
                    playsinline
                    preload="metadata"
                  >
                    <source src="{{ video_url }}" type="video/mp4">
                  </video>
                {% elsif image != blank %}
                  <img
                    src="{{ image | image_url: width: 800 }}"
                    alt="{{ image.alt | escape }}"
                    loading="eager"
                  >
                {% endif %}
              </div>
              <div class="ai-slideshow-text-wrapper-{{ ai_gen_id }}">
                <div class="ai-slideshow-text-content-{{ ai_gen_id }}">
                  {{ text }}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="ai-slideshow-slide-{{ ai_gen_id }} active" data-slide="0">
          <div class="ai-slideshow-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-slideshow-empty-state-{{ ai_gen_id }}">
                Add images or videos to create your carousel
              </div>
            </div>
          </div>
          <div class="ai-slideshow-text-wrapper-{{ ai_gen_id }}">
            <div class="ai-slideshow-text-content-{{ ai_gen_id }}">
              Add text for each slide (images or videos)
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% if has_images %}
      <button
        class="ai-slideshow-nav-{{ ai_gen_id }} ai-slideshow-nav-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button
        class="ai-slideshow-nav-{{ ai_gen_id }} ai-slideshow-nav-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}
  </div>

  {% if has_images %}
    <div class="ai-slideshow-dots-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign video_key = 'video_url_' | append: i
          assign image = block.settings[image_key]
          assign video_url = block.settings[video_key]
        %}
        {% if image != blank or video_url != blank %}
          <button
            class="ai-slideshow-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            data-slide="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</image-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.isPlaying = false;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slideshow-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slideshow-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slideshow-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slideshow-nav-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');

        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) || 3000;

        this.setupEventListeners();
        this.updateSlideshow();

        if (this.autoplay && this.slides.length > 1) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => {
          if (this.autoplayInterval) this.pauseAutoplay();
        });
        
        this.addEventListener('mouseleave', () => {
          if (this.autoplay && !this.isPlaying) this.startAutoplay();
        });
      }

      goToSlide(index) {
        this.currentSlide = Math.max(0, Math.min(index, this.slides.length - 1));
        this.updateSlideshow();
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlideshow();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide === this.slides.length - 1 ? 0 : this.currentSlide + 1;
        this.updateSlideshow();
      }

      updateSlideshow() {
        if (this.track && this.slides.length > 0) {
          const slideWidth = this.slides[0].offsetWidth;
          const offset = this.currentSlide * slideWidth;
          this.track.style.transform = `translateX(-${offset}px)`;
        }

        this.slides.forEach((slide, index) => {
          slide.classList.toggle('active', index === this.currentSlide);
          
          // Play/pause videos based on visibility
          const video = slide.querySelector('video');
          if (video) {
            if (index === this.currentSlide) {
              video.play().catch(e => console.log('Video autoplay prevented:', e));
            } else {
              video.pause();
            }
          }
        });

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });

        if (this.prevButton) {
          this.prevButton.disabled = this.slides.length <= 1;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.slides.length <= 1;
        }
      }

      startAutoplay() {
        if (this.slides.length <= 1) return;
        
        this.isPlaying = true;
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, this.autoplaySpeed);
      }

      pauseAutoplay() {
        this.isPlaying = false;
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('image-slideshow-{{ ai_gen_id }}', ImageSlideshow{{ ai_gen_id }});
  })();
</script>

