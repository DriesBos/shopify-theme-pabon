{% liquid
  assign media_count = 0
  assign media_width_desktop = '100vw'
  assign media_width_mobile = '100vw'
  assign sizes = '(min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '832, 1200, 1600, 1920, 2560, 3840'

  assign has_media = false
  
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif

  assign splitscreen_enabled = section.settings.splitscreen_2_3
  assign media_2_exists = false
  assign media_3_exists = false
  
  assign media_type_2 = section.settings.media_type_2
  assign image_2 = section.settings.image_2
  assign video_2 = section.settings.video_2
  if media_type_2 == 'image' and image_2 != blank
    assign media_2_exists = true
  elsif media_type_2 == 'video' and video_2 != blank
    assign media_2_exists = true
  endif
  
  assign media_type_3 = section.settings.media_type_3
  assign image_3 = section.settings.image_3
  assign video_3 = section.settings.video_3
  if media_type_3 == 'image' and image_3 != blank
    assign media_3_exists = true
  elsif media_type_3 == 'video' and video_3 != blank
    assign media_3_exists = true
  endif
  
  assign use_splitscreen = false
  if splitscreen_enabled and media_2_exists and media_3_exists
    assign use_splitscreen = true
  endif

  assign media_type_1 = section.settings.media_type_1
  assign image_1 = section.settings.image_1
  assign video_1 = section.settings.video_1
  
  if media_type_1 == 'image' and image_1 != blank
    assign media_count = media_count | plus: 1
    assign has_media = true
  elsif media_type_1 == 'video' and video_1 != blank
    assign media_count = media_count | plus: 1
    assign has_media = true
  endif
  
  if use_splitscreen
    assign media_count = media_count | plus: 1
    assign has_media = true
  else
    if media_2_exists
      assign media_count = media_count | plus: 1
      assign has_media = true
    endif
    if media_3_exists
      assign media_count = media_count | plus: 1
      assign has_media = true
    endif
  endif
  
  assign media_type_4 = section.settings.media_type_4
  assign image_4 = section.settings.image_4
  assign video_4 = section.settings.video_4
  if media_type_4 == 'image' and image_4 != blank
    assign media_count = media_count | plus: 1
    assign has_media = true
  elsif media_type_4 == 'video' and video_4 != blank
    assign media_count = media_count | plus: 1
    assign has_media = true
  endif

  assign alpha = section.settings.overlay_color.alpha
  assign is_transparent = true
  if alpha == 1 and section.settings.toggle_overlay
    assign is_transparent = false
  endif
%}

