{% stylesheet %}
  .hero-wrapper {
    --hero-height-offset: 0px;
  }

  body:has(> #header-group > .header-section > #header-component) .hero-wrapper:first-child {
    --hero-height-offset: var(--header-group-height, 0);
  }

  .hero {
    position: relative;
    min-height: calc(var(--hero-min-height) - var(--hero-height-offset));
  }

  .hero[data-shopify-visual-preview] {
    --hero-min-height: 600px;
    min-height: 600px;
  }

  .hero__container {
    position: relative;
    overflow: hidden;
    border: var(--hero-border-width) var(--hero-border-style) rgb(var(--color-border-rgb) / var(--hero-border-opacity));
    min-height: inherit;
    align-items: var(--vertical-alignment-mobile);
    justify-content: var(--horizontal-alignment);
    z-index: var(--layer-base);
  }

  @media screen and (min-width: 750px) {
    .hero__container {
      align-items: var(--vertical-alignment);
    }
  }

  .hero__content-wrapper.page-width {
    grid-column: 2 / 3;
  }

  .hero__content-wrapper {
    position: relative;
    inset: 0;
    z-index: var(--layer-flat);
    padding: 20px;
  }

  @media screen and (max-width: 749px) {
    .hero__content-wrapper {
      padding: 16px;
    }

    .hero__content-wrapper h1,
    .hero__content-wrapper .h1 {
      font-size: clamp(1.5rem, 8vw, 2.5rem) !important;
      line-height: 1.2 !important;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .hero__content-wrapper h2,
    .hero__content-wrapper .h2 {
      font-size: clamp(1.25rem, 6vw, 2rem) !important;
      line-height: 1.3 !important;
    }

    .hero__content-wrapper p {
      font-size: clamp(0.875rem, 4vw, 1rem) !important;
      line-height: 1.5 !important;
    }

    .hero__content-wrapper .group-block-content {
      max-width: 100%;
    }
  }

  .hero__content-wrapper .group-block-content {
    position: relative;
  }

  /* Carousel Styles */
  .hero__carousel-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .hero__carousel-track {
    display: flex;
    height: 100%;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero__carousel-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: relative;
    background-color: #ffffff;
  }

  .hero__image,
  .hero__video,
  .hero__video-poster {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center center;
    overflow: hidden;
    position: relative;
    z-index: var(--layer-base);
  }

  .hero__video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero__video-poster {
    position: absolute;
  }

  /* Splitscreen Styles */
  .hero__carousel-slide--splitscreen {
    display: flex;
  }

  .hero__splitscreen-container {
    display: flex;
    width: 100%;
    height: 100%;
    gap: var(--splitscreen-gap, 0px);
  }

  .hero__splitscreen-panel {
    flex: 1;
    position: relative;
    overflow: hidden;
    height: 100%;
  }

  .hero__splitscreen-panel .hero__image,
  .hero__splitscreen-panel .hero__video,
  .hero__splitscreen-panel .hero__video-poster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  .hero__splitscreen-panel .hero__video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Mobile: Stack splitscreen panels vertically */
  @media screen and (max-width: 749px) {
    .hero__splitscreen-container {
      flex-direction: column;
    }

    .hero__splitscreen-panel {
      flex: 1;
      min-height: 50%;
    }
  }

  /* Carousel Navigation Buttons */
  .hero__carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #000;
  }

  .hero__carousel-btn:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .hero__carousel-btn--prev {
    left: 20px;
  }

  .hero__carousel-btn--next {
    right: 20px;
  }

  @media screen and (max-width: 749px) {
    .hero__carousel-btn {
      width: 40px;
      height: 40px;
    }

    .hero__carousel-btn--prev {
      left: 10px;
    }

    .hero__carousel-btn--next {
      right: 10px;
    }
  }

  .hero__link {
    position: absolute;
    inset: 0;
    grid-column: 1 / -1;
    z-index: 1;
  }

  .hero__carousel-wrapper,
  .hero__content-wrapper {
    pointer-events: none;
  }

  .hero__carousel-wrapper a,
  .hero__carousel-wrapper button,
  .hero__carousel-wrapper input,
  .hero__carousel-wrapper textarea,
  .hero__carousel-wrapper select,
  .hero__content-wrapper a,
  .hero__content-wrapper button,
  .hero__content-wrapper input,
  .hero__content-wrapper textarea,
  .hero__content-wrapper select {
    pointer-events: auto;
  }

  .hero__content-wrapper--design-mode * {
    pointer-events: auto;
  }
{% endstylesheet %}

<script>
  (function() {
    const heroSection = document.querySelector('#Hero-{{ section.id }}');
    if (!heroSection) return;

    const track = heroSection.querySelector('[data-carousel-track]');
    const prevBtn = heroSection.querySelector('[data-carousel-prev]');
    const nextBtn = heroSection.querySelector('[data-carousel-next]');
    const mediaCount = parseInt(heroSection.dataset.mediaCount) || 1;

    if (mediaCount <= 1) return;

    let currentIndex = 0;
    let isTransitioning = false;

    function updateCarousel(index, smooth) {
      if (isTransitioning) return;
      
      isTransitioning = true;
      if (smooth) {
        track.style.transition = 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
      } else {
        track.style.transition = 'none';
      }
      track.style.transform = 'translateX(-' + (index * 100) + '%)';

      if (smooth) {
        setTimeout(function() {
          isTransitioning = false;
        }, 500);
      } else {
        isTransitioning = false;
      }
    }

    function nextSlide() {
      if (isTransitioning) return;
      currentIndex = (currentIndex + 1) % mediaCount;
      updateCarousel(currentIndex, true);
    }

    function prevSlide() {
      if (isTransitioning) return;
      currentIndex = (currentIndex - 1 + mediaCount) % mediaCount;
      updateCarousel(currentIndex, true);
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }
    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }

    // Touch/swipe support
    var touchStartX = 0;
    var touchEndX = 0;

    track.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
    });

    track.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      if (touchEndX < touchStartX - 50) {
        nextSlide();
      }
      if (touchEndX > touchStartX + 50) {
        prevSlide();
      }
    });

    // Keyboard navigation
    heroSection.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft') prevSlide();
      if (e.key === 'ArrowRight') nextSlide();
    });

    // Auto-play
    {% if section.settings.autoplay %}
    var autoplaySpeed = {{ section.settings.autoplay_speed | default: 5000 }};
    var autoplayInterval = setInterval(nextSlide, autoplaySpeed);

    heroSection.addEventListener('mouseenter', function() {
      clearInterval(autoplayInterval);
    });

    heroSection.addEventListener('mouseleave', function() {
      autoplayInterval = setInterval(nextSlide, autoplaySpeed);
    });
    {% endif %}
  })();
</script>

